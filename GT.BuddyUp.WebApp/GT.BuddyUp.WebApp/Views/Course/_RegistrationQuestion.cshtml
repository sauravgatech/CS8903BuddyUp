@model GT.BuddyUp.WebApp.Models.DsiplayQuestion
<div id="questionRows">
    @*@Html.Label(Model.QuestionText) : 
    @Html.DropDownListFor(m  => m.selectedAnswer, new SelectList(Model.AnswerChoices))*@
    @using (Html.BeginCollectionItem("questions"))
    {
        <table>
            <tr>
                <td class="col-md-6">
                    <div class="input-group">
                        @Html.DisplayFor(model => model.QuestionText, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td class="col-md-6">
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.selectedAnswer, new SelectList(Model.AnswerChoices), new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
            </tr>
        </table>
    }
</div>
