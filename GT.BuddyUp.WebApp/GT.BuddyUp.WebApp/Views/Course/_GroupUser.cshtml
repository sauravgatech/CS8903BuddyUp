@model GT.BuddyUp.WebApp.Models.GroupModifiableModel
<div id="groupUserRows">
    @using (Html.BeginCollectionItem("groupUsers"))
    {
        <table>
            <tr>
                <td class="col-md-2">
                    <div class="input-group">
                        @Html.DisplayFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td class="col-md-2">
                    <div class="input-group">
                        @Html.DisplayFor(model => model.MemberName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td class="col-md-2">
                    <div class="input-group">
                        @Html.DisplayFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td class="col-md-3">
                    <div class="input-group">
                        @Html.DisplayFor(model => model.SuggestedGroups, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td class="col-md-3">
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.selectedNewGroup, new SelectList(Model.NewGroups), new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
            </tr>
        </table>
    }
</div>

